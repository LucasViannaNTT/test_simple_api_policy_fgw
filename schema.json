{
    "title": "jwt-validation-flexgateway-testing-poc/schema.json",
    "type": "object",
    "description": "Test policy for Flex Gateway",
    "properties": {
        "environment" : {
            "title": "Environment",
            "description": "Environment for the policy",
            "type": "string",
            "enum": [
                "Dev",
                "Test",
                "Preprod",
                "Prod",
                "Default"
            ],
            "default": "Dev"
        },
        "valid_scopes": {
            "title": "Valid Scopes",
            "description": "List of valid scopes, each scope must be separated by a space.",
            "type": "string"
        },
        "okta_data_ttl": {
            "title": "Okta Data TTL in hours",
            "description": "TTL for Okta data in seconds",
            "type": "integer",
            "minimum": 0,
            "default": 24
        },
        "okta_call_timeout": {
            "title": "Okta Call Timeout in seconds",
            "description": "Timeout for Okta calls in milisecconds",
            "type": "integer",
            "minimum": 0,
            "default": 1000
        },
        "log_level": {
            "title": "Log Level",
            "description": "Log level for the policy",
            "type": "string",
            "enum": [
                "TRACE",
                "DEBUG",
                "INFO",
                "WARN",
                "ERROR"
            ],
            "default": "INFO"
        }
    },
    "required": [
        "environment",
        "log_level"
    ],
    "unevaluatedProperties": false,
    "@context": {
      "@vocab": "anypoint://vocabulary/policy.yaml#",
      "security": "anypoint://vocabulary/policy.yaml#"
    },
    "$id": "custom-auth-header-simple",
    "$schema": "https://json-schema.org/draft/2019-09/schema"
  }